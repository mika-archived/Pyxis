<prism:PrismUnityApplication x:Class="Pyxis.App"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:converters="using:Pyxis.Converters"
                             xmlns:prism="using:Prism.Unity.Windows">
    <prism:PrismUnityApplication.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Controls.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
            <converters:NovelStringToBlockCollectionCOnverter x:Key="NovelStringToBlockCollectionCOnverter" />
            <converters:ReverseBooleanToVisibilityConverter x:Key="ReverseBooleanToVisibilityConverter" />
            <converters:HtmlStringToBlockCollectionConverter x:Key="HtmlStringToBlockCollectionConverter" />
            <converters:StringFormatConverter x:Key="StringFormatConverter" />
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
        </ResourceDictionary>
    </prism:PrismUnityApplication.Resources>
</prism:PrismUnityApplication>
