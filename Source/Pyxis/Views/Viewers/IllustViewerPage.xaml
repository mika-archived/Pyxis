<Page x:Class="Pyxis.Views.Viewers.IllustViewerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controlsEx="using:Pyxis.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:prism="using:Prism.Windows.Mvvm"
      xmlns:vm="using:Pyxis.ViewModels.Viewers"
      d:DataContext="{d:DesignInstance vm:IllustViewerPageViewModel}"
      prism:ViewModelLocator.AutoWireViewModel="True"
      mc:Ignorable="d">
    <ScrollViewer Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                  HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto"
                  ZoomMode="Enabled">
        <controlsEx:ImageEx MaxWidth="{x:Bind ViewModel.MaxWidth.Value, Mode=OneWay}"
                            MaxHeight="{x:Bind ViewModel.MaxHeight.Value, Mode=OneWay}"
                            Source="{x:Bind ViewModel.OriginaiImageUrl.Value, Mode=OneWay}" />
    </ScrollViewer>
</Page>
