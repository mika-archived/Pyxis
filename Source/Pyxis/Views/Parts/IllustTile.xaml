<UserControl x:Class="Pyxis.Views.Parts.IllustTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:PyxisControls.Extend"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="using:Microsoft.Xaml.Interactivity"
             xmlns:ic="using:Microsoft.Xaml.Interactions.Core"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Pyxis.ViewModels.Contents"
             d:DataContext="{d:DesignInstance vm:IllustViewModel}"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">
    <controls:PixivImageEx Source="{Binding ThumbnailUrl, Mode=OneWay}"
                           Stretch="UniformToFill">
        <i:Interaction.Behaviors>
            <ic:EventTriggerBehavior EventName="Tapped">
                <ic:InvokeCommandAction Command="{Binding OnTappedCommand}" />
            </ic:EventTriggerBehavior>
        </i:Interaction.Behaviors>
    </controls:PixivImageEx>
</UserControl>















