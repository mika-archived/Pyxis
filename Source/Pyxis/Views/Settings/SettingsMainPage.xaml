<Page x:Class="Pyxis.Views.Settings.SettingsMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:Pyxis.Views.Settings"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:prism="using:Prism.Windows.Mvvm"
      xmlns:vm="using:Pyxis.ViewModels.Settings"
      d:DataContext="{d:DesignInstance vm:SettingsMainPageViewModel}"
      prism:ViewModelLocator.AutoWireViewModel="True"
      mc:Ignorable="d">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Pivot Style="{StaticResource TabsStylePivotStyle}">
            <PivotItem>
                <PivotItem.Header>
                    <TextBlock x:Uid="General"
                               Width="80"
                               Style="{StaticResource TabsStyleTextBlockStyle}" />
                </PivotItem.Header>
                <local:SettingsGeneralView Margin="10" />
            </PivotItem>
            <PivotItem>
                <PivotItem.Header>
                    <TextBlock x:Uid="Account"
                               Width="80"
                               Style="{StaticResource TabsStyleTextBlockStyle}" />
                </PivotItem.Header>
                <local:SettingsAccountView Margin="10" />
            </PivotItem>
            <PivotItem>
                <PivotItem.Header>
                    <TextBlock x:Uid="Maintenance"
                               Width="80"
                               Style="{StaticResource TabsStyleTextBlockStyle}" />
                </PivotItem.Header>
                <local:SettingsMaintenanceView Margin="10" />
            </PivotItem>
            <PivotItem>
                <PivotItem.Header>
                    <TextBlock x:Uid="About"
                               Width="80"
                               Style="{StaticResource TabsStyleTextBlockStyle}" />
                </PivotItem.Header>
                <local:SettingsAboutView />
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
