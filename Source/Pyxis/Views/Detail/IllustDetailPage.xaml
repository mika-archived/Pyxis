<Page x:Class="Pyxis.Views.Detail.IllustDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:behaviors="using:Pyxis.Behaviors"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:i="using:Microsoft.Xaml.Interactivity"
      xmlns:local="using:Pyxis.Views.Detail"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:prism="using:Prism.Windows.Mvvm"
      xmlns:vm="using:Pyxis.ViewModels.Detail"
      d:DataContext="{d:DesignInstance vm:IllustDetailPageViewModel}"
      prism:ViewModelLocator.AutoWireViewModel="True"
      mc:Ignorable="d">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Image Margin="10"
               Source="{x:Bind ViewModel.ThumbnailPath, Mode=OneWay}"
               Stretch="Uniform">
            <i:Interaction.Behaviors>
                <behaviors:AdjustControlSizeBehavior WidthOffset="-20"
                                                     IsSyncWidth="True" />
            </i:Interaction.Behaviors>
        </Image>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{x:Bind ViewModel.Title, Mode=OneWay}"
                       TextWrapping="Wrap" />
        </StackPanel>
    </StackPanel>
</Page>
