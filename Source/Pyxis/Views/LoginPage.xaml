<Page x:Class="Pyxis.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="using:Pyxis.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:media="using:Microsoft.Toolkit.Uwp.UI.Media"
      xmlns:prism="using:Prism.Windows.Mvvm"
      prism:ViewModelLocator.AutoWireViewModel="True"
      Style="{StaticResource PageStyle}"
      mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock Padding="12,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{StaticResource TitleTextBlockStyle}"
                       Text="ログイン" />
        </Grid>
        <Grid Grid.Row="1">
            <controls:PixivSlideshow ImageCollection="{x:Bind ViewModel.ImageCollection.Value, Mode=OneWay}"
                                     Interval="30" />
            <Border>
                <Border.Background>
                    <media:BackdropBlurBrush Amount="4" />
                </Border.Background>
            </Border>
            <Border Padding="25"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                    CornerRadius="25"
                    Opacity=".85">
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                    <TextBlock Margin="5"
                               Text="Pyxis を使用するには pixiv へのログインが必要です。" />
                    <StackPanel Width="260"
                                Orientation="Vertical">
                        <TextBox Width="250"
                                 Margin="5"
                                 PlaceholderText="メールアドレス or ユーザーネーム"
                                 Text="{x:Bind ViewModel.Username.Value, Mode=TwoWay}" />
                        <PasswordBox Width="250"
                                     Margin="5"
                                     Password="{x:Bind ViewModel.Password.Value, Mode=TwoWay}"
                                     PlaceholderText="パスワード" />
                        <Button Width="250"
                                Margin="5"
                                HorizontalAlignment="Center"
                                Command="{x:Bind ViewModel.LoginCommand}"
                                Content="ログイン" />
                        <StackPanel HorizontalAlignment="Right"
                                    Orientation="Horizontal">
                            <StackPanel.Resources>
                                <Style TargetType="HyperlinkButton">
                                    <Setter Property="FontSize" Value="12" />
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="Height" Value="16" />
                                    <Setter Property="Margin" Value="5" />
                                </Style>
                            </StackPanel.Resources>
                            <HyperlinkButton Content="パスワードを忘れた"
                                             NavigateUri="https://www.pixiv.net/reminder.php" />
                            <TextBlock Height="16"
                                       VerticalAlignment="Center"
                                       FontSize="10">
                                |
                            </TextBlock>
                            <HyperlinkButton Content="アカウントを作る"
                                             NavigateUri="https://accounts.pixiv.net/signup" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>