<UserControl x:Class="Pyxis.Views.AccountInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:Pyxis.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="using:Prism.Windows.Mvvm"
             xmlns:viewModels="using:Pyxis.ViewModels"
             d:DataContext="{d:DesignInstance viewModels:AccountInfoControlViewModel}"
             d:DesignHeight="300"
             d:DesignWidth="400"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d">
    <Grid Width="48"
          Height="48">
        <Border Margin="5"
                CornerRadius="19">
            <Border.Background>
                <ImageBrush ImageSource="{x:Bind ViewModel.ThumbnailPath, Mode=OneWay}" />
            </Border.Background>
        </Border>
    </Grid>
</UserControl>
