<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Image Gallery Styles  -->
    <Style x:Key="ThumbnailImageStyle"
           TargetType="Image">
        <Setter Property="Width" Value="228" />
        <Setter Property="Height" Value="228" />
    </Style>

    <Style x:Key="DetailImageStyle"
           TargetType="Image">
        <Setter Property="Width" Value="456" />
        <Setter Property="Height" Value="456" />
    </Style>

</ResourceDictionary>
