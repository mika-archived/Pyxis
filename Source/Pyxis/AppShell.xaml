<Page x:Class="Pyxis.AppShell"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:attach="using:Pyxis.Attach"
      xmlns:behaviors="using:Pyxis.Behaviors"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:i="using:Microsoft.Xaml.Interactivity"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Pivot x:Name="Pivot">
            <i:Interaction.Behaviors>
                <behaviors:AttachNavigationToPivotBehavior RootFrame="{x:Bind AppRootFrame}" />
            </i:Interaction.Behaviors>
            <Pivot.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="FontSize" Value="18" />
                </Style>
            </Pivot.Resources>
            <PivotItem attach:NavigateTo.PageToken="IllustMain">
                <PivotItem.Header>
                    <TextBlock Text="イラスト" />
                </PivotItem.Header>
            </PivotItem>
            <PivotItem attach:NavigateTo.PageToken="MangaMain">
                <PivotItem.Header>
                    <TextBlock Text="マンガ" />
                </PivotItem.Header>
            </PivotItem>
            <PivotItem attach:NavigateTo.PageToken="NovelMain">
                <PivotItem.Header>
                    <TextBlock Text="小説" />
                </PivotItem.Header>
            </PivotItem>
            <Pivot.RightHeader>
                <StackPanel Orientation="Horizontal">
                    <SearchBox Width="250"
                               Height="35"
                               Margin="5"
                               VerticalAlignment="Center"
                               BorderThickness="1"
                               FontSize="16"
                               PlaceholderText="検索" />
                </StackPanel>
            </Pivot.RightHeader>
        </Pivot>
    </Grid>
</Page>
