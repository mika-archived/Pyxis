<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:controls="using:Pyxis.Controls">
    <Style TargetType="controls:TextBlockWithGlyph">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:TextBlockWithGlyph">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon VerticalAlignment="Center"
                                  Glyph="{TemplateBinding Glyph}"
                                  Style="{TemplateBinding GlyphStyle}" />
                        <TextBlock Padding="7.5,0,0,0"
                                   VerticalAlignment="Center"
                                   Style="{TemplateBinding TextStyle}"
                                   Text="{TemplateBinding Text}" />
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
