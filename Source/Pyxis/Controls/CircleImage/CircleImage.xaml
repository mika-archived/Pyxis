<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:Pyxis.Controls">
    <Style TargetType="controls:CircleImage">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:CircleImage">
                    <Border Name="ImageBorder"
                            BorderBrush="{TemplateBinding CircleBorderBrush}"
                            BorderThickness="{TemplateBinding CircleBorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>